<div class="navbar align-items-center brand border-bottom">

  <%=link_to image_tag('logo_mixit.png', width: '80px', class: 'logo mx-5'), root_path %>
  <div class="align-items-center d-flex justify-content-between" style="width: 260px">
    <p> <%= link_to 'ADD COCKTAIL', new_cocktail_path, class: "mx-4"%></p>
    <%=link_to image_tag('girl.jpeg', width: '80px', class: 'avatar-new mr-5', style: "width: 47px;"), error_path %>
  </div>
</div>


<!-- add a cocktail button -->
<div class="add-div">
  <%= link_to (new_cocktail_path) do %>
    <button class="icon-btn add-btn">
      <div class="add-icon"></div>
      <div class="btn-txt">ADD NEW COCKTAIL</div>
    </button>
  <% end %>
</div>
<!-- add a cocktail end -->

<!-- card container start -->
  <div class="container mx-auto">
    <div class="cards mx-auto">
      <!-- cards start -->
        <!-- iteration through cocktails -->
          <% @cocktails.each do |cocktail|%>
            <div class="card-wrapper" >

              <!-- front start -->
                <div class="card card--front" >
                  <div class="gradient-effect">
                    <%= cl_image_tag cocktail.photo, style: 'border-radius: 6px; z-index: -1', height: 370, width: 290, crop: :fill %>
                  </div>
                  <div class="name text-center mx-auto">
                    <h1>  <%= cocktail.name.upcase %></h1>
                  </div>
                </div>
              <!-- front end -->

              <!-- back start -->
                <div class="card card--back">
                  <div class="name-back">
                    <h4 class="text-center mt-3"><%= cocktail.name.upcase %></h4>
                    <hr class="mb-1 mt-0">
                  </div>
                  <div class="description" style="">
                      <!-- iteration through doses -->
                        <% cocktail.doses.each do |dose|%>
                          <tr>
                            <h2 class="card-text py-1 mt-2 d-flex justify-content-between">
                              <div class="one-side text-align-right" style="width: 33%;">
                              <td style="color: #3C3C3B;"><%= dose.description %></td>
                              </div>
                              <div class="two-side text-align-left" style="width: 62%">
                              <td><%= dose.ingredient.name %> <%= link_to dose_path(dose), method: :delete do %><i class="fa fa-times" alt="remove" style="color: lightgray; font-size: 14px;"></i></%></td><% end %>
                              </div>
                            </h2>
                          </tr>
                        <% end %>
                      <!-- iteration through doses end-->
                  </div>
                  <hr class=" mt-0 mb-0 mx-auto" style="width: 100%;">
                  <div class="buttons my-auto py-auto mx-auto">
                    <%= link_to (new_cocktail_dose_path(cocktail)) do %>
                    <i class="fas fa-plus-circle" style="color: lightgray; font-size: 22px; "></i>
                    <% end %>

                    <%= link_to (cocktail_path(cocktail)), method: :delete do %>
                    <i class="fa fa-trash-alt" style="color: lightgray; font-size: 22px; font-weight: lighter;"></i>
                    <% end %>
                  </div>
                </div>
              <!-- back end -->

            </div>
          <% end %>
        <!-- iteration through cocktails end-->

        <!-- another add-button within cards (need to choose which to keep) -->
          <%= link_to (new_cocktail_path) do %>
            <div class="card card-button mx-auto ">
              <i class="fas fa-plus-circle" style=" "></i>
            </div>
          <% end %>
        <!-- another add-button within cards (need to choose which to keep) -->
      <!-- cards end -->
    </div>

  </div>
<!-- card container end -->

    <!-- add a cocktail button -->
    <div class="add-div">
      <%= link_to (new_cocktail_path) do %>
        <button class="icon-btn add-btn">
          <div class="add-icon"></div>
          <div class="btn-txt">ADD NEW COCKTAIL</div>
        </button>
      <% end %>
    </div>
    <!-- add a cocktail end -->





















