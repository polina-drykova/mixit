<p><strong><%= @cocktail.name %></strong></p>
<p><em>Ingredients and doses:</em></p>
  <%= link_to 'Add a new dose', new_cocktail_dose_path(@cocktail) %>

<% @cocktail.doses.each do |dose|%>

      <tr><p>
        <td> <%= dose.description %> of <strong> <%= dose.ingredient.name %></strong></td>
        <td><%= link_to dose_path(dose), method: :delete do %><i class="fa fa-trash-alt" style="color: gray"></i></%></td>
        <% end %>
      </p></tr>
<% end %>

<%= link_to 'Back', cocktails_path %>
