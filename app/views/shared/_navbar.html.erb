<div class="navbar">
  <div class="navbar-box mx-auto">
    <!-- logo start -->
      <div class="my-auto">
        <%=link_to image_tag('mixit3.png', class: 'navbar-logo'), root_path %>
      </div>
    <!-- logo end -->

    <!-- if user signed in start -->
      <% if user_signed_in? %>
        <div class="nav-item dropdown">
          <% unless current_user.avatar.blank? %>
            <%= cl_image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <i class="fas fa-user-circle avatar" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="font-size: 40px;"></i>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profile", "#", class: "dropdown-item" %>
            <hr class="mx-auto mt-1 mb-0 p-0 d-flex" style="width: 75%;">
            <%#= link_to "Dashboard", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </div>
    <!-- if user signed in end -->

    <!-- if user is not signed in start (show signin/signup links) -->
      <% else %>
        <% unless controller_name == "registrations" || controller_name == "sessions" %>
          <div class='links p-auto'>
            <%=link_to 'Log in', new_user_session_path, class: 'user-link mr-2' %>
            |
            <%=link_to 'Sign up', error_path, class: 'user-link ml-2' %>
          </div>
        <% end %>
      <% end %>
    <!-- if user is not signed in end -->

    <%#=link_to image_tag('girl.jpg', width: '80px', class: 'avatar-new', style: "width: 47px;"), error_path %>
  </div>
</div>
